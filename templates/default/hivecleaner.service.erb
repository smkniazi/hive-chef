[Unit]
Description = Hive cleaner
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node['hive2']['user'] %>

PIDFile = <%= node['hive2']['cleaner']['pid_file'] %>
ExecStart = <%= node['hive2']['cleaner']['parent'] %>/start-hivecleaner.sh

LimitNOFILE = 20000
Type = forking

[Install]
WantedBy = multi-user.target
