services = [
    {
        id = "hive/server2-ssl"
        name = "hive"
        tags = [
            "hiveserver",
            "hiveserver2",
            "hiveserver2-tls"
        ]
        port = <%= node['hive2']['portssl'] %>
        check = {
            id = "hs2-health-check"
            name = "Health check for Hive server"
            args = ["<%= node['hive2']['consul'] %>/hiveserver2-health.sh"]
            interval = "20s"
            timeout = "20s"
            status = "passing"
        }
    },
    {
        id = "hive/server2-plain"
        name = "hive"
        tags = [
            "hiveserver2-plain"
        ]
        port = <%= node['hive2']['port'] %>
        check = {
            id = "hs2-plain-health-check"
            alias_service = "hive/server2-ssl"
        }
    },
    {
        id = "hive/server2-monitoring"
        name = "hive"
        tags = [
            "monitoring"
        ]
        port = <%= node['hive2']['hs2']['metrics_port'] %>
        check = {
            id = "hs2-mon-health-check"
            alias_service = "hive/server2-ssl"
        }
    }
]
